<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
           version="2.5">

    <servlet>
        <servlet-name>EmployeesOfDepartment</servlet-name>
        <servlet-class>com.test.aimprosoft.servlet.EmployeesOfDeptServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmployeesOfDepartment</servlet-name>
        <url-pattern>/employeesOfDepartment</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ListDepartment</servlet-name>
        <servlet-class>com.test.aimprosoft.servlet.ListDepartmentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListDepartment</servlet-name>
        <url-pattern>/listDepartment</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteEmployee</servlet-name>
        <servlet-class>com.test.aimprosoft.servlet.DeleteEmployeeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteEmployee</servlet-name>
        <url-pattern>/deleteEmployee</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteDepartment</servlet-name>
        <servlet-class>com.test.aimprosoft.servlet.DeleteDepartmentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteDepartment</servlet-name>
        <url-pattern>/deleteDepartment</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddEmployee</servlet-name>
        <servlet-class>com.test.aimprosoft.servlet.AddEmployeeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddEmployee</servlet-name>
        <url-pattern>/addEmployee</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddDepartment</servlet-name>
        <servlet-class>com.test.aimprosoft.servlet.AddDepartmentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddDepartment</servlet-name>
        <url-pattern>/addDepartment</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateEmployee</servlet-name>
        <servlet-class>com.test.aimprosoft.servlet.UpdateEmployeeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateEmployee</servlet-name>
        <url-pattern>/updateEmployee</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateDepartment</servlet-name>
        <servlet-class>com.test.aimprosoft.servlet.UpdateDepartmentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateDepartment</servlet-name>
        <url-pattern>/updateDepartment</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ListEmployee</servlet-name>
        <servlet-class>com.test.aimprosoft.servlet.ListEmployeeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListEmployee</servlet-name>
        <url-pattern>/listEmployee</url-pattern>
    </servlet-mapping>
    <servlet>
    <servlet-name>RegistrationServlet</servlet-name>
    <servlet-class>com.test.aimprosoft.servlet.RegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.test.aimprosoft.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.test.aimprosoft.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.test.aimprosoft.filter.CharEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>SecurityFilter</filter-name>
        <filter-class>com.test.aimprosoft.filter.SecurityFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SecurityFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <error-page>
        <error-code>500</error-code>
        <location>/error500.jsp</location>
    </error-page>

    <welcome-file-list>
        <welcome-file>Login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
